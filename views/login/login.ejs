<% layout('layouts/boilerplate') %>
    <div class="row g-2 d-flex justify-content-center align-items-center" style="max-width: 100%; height: 75vh;">
        <div class="col-1 me-2">
            <h1>Log in</h1>
        </div>
        <div class="col-3 ms-1">
            <form action="/" method="POST" id="form">
                <div class="mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-control" type="text" placeholder="Username" id="username" name="login[username]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password:</label>
                    <input class="form-control" type="password" placeholder="Password" id="password"
                        name="login[password]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary col-3" id="submit">Log In</button>
                </div>
        </div>
    </div>
    </form>

    <script src="/js/loadingSpinner.js"></script>