<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center" style="max-width: 100%; height: 75vh;">

        <div class="border rounded border-dark col-4 p-4">
            <div class="row text-center mb-4 border-bottom border-dark">
                <h1 class="h1">Are you sure?</h1>
            </div>
            <div class="row border-bottom border-dark mb-3">
                <h2 class="text-center mb-3">
                    <%= userToDisable.cn %>
                </h2>
                <div class="col-6">
                    <div class="mb-3">
                        <h5>
                            <u>Job Title:</u>
                            <%= userToDisable.description %>
                        </h5>
                    </div>
                    <div class="mb-3">
                        <h5>
                            <u>Email Address:</u>
                            <%= userToDisable.mail %>
                        </h5>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <h4><u>Email Groups:</u></h4>
                    </div>
                    <div class="col-4">
                        <ul>
                            <% for (let group of userToDisable.groups) { %>
                                <li>
                                    <%= group.cn %>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                </div>
            </div>
            <form action="/create/disable" method="POST" id="form">
                <div class="row mb-3">
                    <div class="mb-3">
                        <h5>Please type the user's first and last name to disable the account</h3>
                    </div>
                    <div class="col mx-auto mb-3">
                        <input type="text" placeholder="<%= userToDisable.cn %> " name="disable[cn]" id="commonName"
                            class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-4 mx-auto">
                        <button id="submit" class="btn btn-danger" disabled>Disable <%= userToDisable.sAMAccountName %>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>const userToDisable = '<%= userToDisable.cn %>'</script>
    <script src="/js/confirmDisable.js"></script>
    <script src="/js/loadingSpinner.js"></script>